	Time = FormatDateTime(time,4) 
	Dim Hrs: Hrs = Left(Time,instr(Time,":")-1)
	Dim Mins: Mins = Right (Time, instrRev(Time,":")-1)

	Time2Seconds = (3600*Hrs) +(60*Mins)
	
End Function